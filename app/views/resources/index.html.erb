<h1>Listing resources</h1>

<table>
  <tr>
    <th>Resource type</th>
    <th>Name</th>
    <th>Memo</th>
    <th>Sort num</th>
    <th>Entry resource</th>
    <th>Update resource</th>
    <th>Lock version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.resource_type %></td>
    <td><%= resource.name %></td>
    <td><%= resource.memo %></td>
    <td><%= resource.sort_num %></td>
    <td><%= resource.entry_resource_id %></td>
    <td><%= resource.update_resource_id %></td>
    <td><%= resource.lock_version %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

